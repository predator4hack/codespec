{
  "name": "feature-spec-extension",
  "displayName": "Feature Spec Manager",
  "description": "AI-powered feature specification management for VS Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onView:featureSpecs"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "featureSpecs",
          "name": "Feature Specs",
          "when": "workspaceHasFeatures || true"
        }
      ]
    },
    "commands": [
      {
        "command": "featureSpecs.createNew",
        "title": "Create New Feature",
        "icon": "$(add)"
      },
      {
        "command": "featureSpecs.refreshTree",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "codespec.generateQuestions",
        "title": "CodeSpec: Generate Questions"
      },
      {
        "command": "codespec.generatePlan",
        "title": "CodeSpec: Generate Implementation Plan"
      },
      {
        "command": "codespec.switchAgent",
        "title": "CodeSpec: Switch CLI Agent"
      },
      {
        "command": "codespec.refreshAgents",
        "title": "CodeSpec: Refresh CLI Agents"
      },
      {
        "command": "codespec.showAgentStatus",
        "title": "CodeSpec: Show Agent Status"
      },
      {
        "command": "codespec.runInTerminal",
        "title": "CodeSpec: Run in Terminal"
      },
      {
        "command": "codespec.analyzeProjectContext",
        "title": "CodeSpec: Analyze Project Context"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "featureSpecs.createNew",
          "when": "view == featureSpecs",
          "group": "navigation"
        },
        {
          "command": "featureSpecs.refreshTree",
          "when": "view == featureSpecs",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "codespec.generateQuestions",
          "when": "resourceExtname == .md",
          "group": "codespec@1"
        },
        {
          "command": "codespec.generatePlan",
          "when": "resourceExtname == .md",
          "group": "codespec@2"
        },
        {
          "command": "codespec.runInTerminal",
          "when": "resourceExtname == .md",
          "group": "codespec@3"
        }
      ],
      "commandPalette": [
        {
          "command": "codespec.generateQuestions"
        },
        {
          "command": "codespec.generatePlan"
        },
        {
          "command": "codespec.switchAgent"
        },
        {
          "command": "codespec.refreshAgents"
        },
        {
          "command": "codespec.showAgentStatus"
        },
        {
          "command": "codespec.runInTerminal"
        },
        {
          "command": "codespec.analyzeProjectContext"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/predator4hack/codespec.git"
  },
  "keywords": ["vscode", "extension", "feature-spec", "ai", "claude", "gemini"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/predator4hack/codespec/issues"
  },
  "homepage": "https://github.com/predator4hack/codespec#readme",
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.104.0",
    "ts-loader": "^9.5.4",
    "typescript": "^4.9.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  }
}
